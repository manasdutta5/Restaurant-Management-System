    <h3 style="padding: 3%; text-align: center;">Add a store:</h3>
    <!-- Form to update info -->

    <!-- //Update store form goes here -->
    <div class="updatestoreform">
        <form action="/modify_store" method="POST">

            <div class="form-group">
                <label for="exampleFormControlInput1">New Store ID:</label>
                <input name="newstoreid" class="form-control" id="exampleFormControlInput1"
                    placeholder="Store id, eg: HP001">
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">New Store Name:</label>
                <input name="newstorename" class="form-control" id="exampleFormControlInput1" placeholder="Store Name">
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">New Phone Number</label>
                <input name="newstorephone" class="form-control" id="exampleFormControlInput1"
                    placeholder="Store Contact no.">
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">New Manager ID:</label>
                <input name="newmanagerid" class="form-control" id="exampleFormControlInput1"
                    placeholder="Manager id, eg: HPM01">
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Manager Name</label>
                <input name="newstoremanager" class="form-control" id="exampleFormControlInput1"
                    placeholder="enter manager name">
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Address:</label>
                <input name="newstoreadd" class="form-control" id="exampleFormControlInput1"
                    placeholder="Store Address">
            </div>

            <div class="form-group">
                <label for="exampleFormControlSelect1">Active Status</label>
                <select class="form-control" name="activestatus" id="exampleFormControlSelect1">
                    <option>Active</option>
                    <option>Inactive</option>

                </select>
            </div>




            <div class="submit"><input type="submit" value="Modify Details"></div>
        </form>

    </div>

